{
	"name": "@balboa/server-sdk",
	"version": "0.1.0",
	"private": true,
	"description": "Balboa Server SDK - Backend voice verification logic and API endpoints",
	"main": "./dist/index.cjs",
	"module": "./dist/index.mjs",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.mjs",
			"require": "./dist/index.cjs"
		}
	},
	"files": [
		"dist",
		"README.md"
	],
	"scripts": {
		"build": "tsup",
		"dev": "tsup --watch",
		"type-check": "tsc --noEmit",
		"lint": "eslint .",
		"clean": "rm -rf dist"
	},
	"dependencies": {
		"zod": "^3.23.8"
	},
	"devDependencies": {
		"@repo/eslint-config": "workspace:*",
		"@repo/typescript-config": "workspace:*",
		"@types/node": "^20",
		"tsup": "^8.0.0",
		"typescript": "^5.6.3"
	},
	"keywords": [
		"voice-verification",
		"fraud-prevention",
		"e-commerce",
		"authentication",
		"sdk",
		"typescript",
		"backend",
		"server",
		"balboa",
		"elevenlabs",
		"sdk"
	],
	"author": "Balboa Team",
	"license": "MIT"
}
